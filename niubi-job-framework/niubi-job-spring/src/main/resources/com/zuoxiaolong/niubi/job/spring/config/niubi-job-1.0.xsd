<?xml version="1.1" encoding="UTF-8" ?>
<xsd:schema xmlns="http://www.zuoxiaolong.com/schema/niubi-job"
			xmlns:xsd="http://www.w3.org/2001/XMLSchema"
			targetNamespace="http://www.zuoxiaolong.com/schema/niubi-job"
			elementFormDefault="qualified"
			attributeFormDefault="unqualified">

	<xsd:import namespace="http://www.springframework.org/schema/beans" schemaLocation="http://www.springframework.org/schema/beans/spring-beans.xsd" />

	<xsd:element name="job-driven">
		<xsd:complexType>
			<xsd:attribute name="packagesToScan" type="xsd:string" use="required"/>
		</xsd:complexType>
	</xsd:element>

</xsd:schema>
